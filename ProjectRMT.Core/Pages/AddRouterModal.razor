@using System.Drawing;
@using MudBlazor;
@using Router = Project_RMT.Models.Router;
@using System.Net;

<MudForm @ref="form">
    <MudDialog>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField T="IPAddress" Label="IPadress" @ref="pwField1" />
